<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/card_view_paper_size_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="7">



    <ImageView
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:id="@+id/iv_cv_paper_size_wh"
        android:src="@drawable/ic_papersizeicon"
        android:layout_weight="2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="25dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_paper_size_cv_a4"
            android:layout_marginTop="3dp"
            android:text="A4 size paper"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_paper_size_cv_descriptions_wh"
            android:text="Descriptions"
            android:textColor="@color/grey"
            android:clickable="true" />

    </LinearLayout>

<!--    <CheckBox-->
<!--        android:layout_width="25dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:gravity="center"-->
<!--        android:id="@+id/chk_box_cv_paper_size_wh"-->
<!--        android:background="@color/colorMediaPickerWhite"-->
<!--        android:layout_weight="1"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:layout_marginRight="20dp"-->
<!--        android:layout_marginLeft="140dp"/>-->

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chk_box_cv_paper_size_wh"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginLeft="100dp"
        android:buttonTint="@color/grey"
        />

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>