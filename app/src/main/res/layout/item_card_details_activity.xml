<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:id="@+id/card_view_prev_order">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:weightSum="7">

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal"-->
<!--                android:layout_weight="1">-->

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:id="@+id/tv_status_cv_prev_ord"-->
<!--                    android:text="@string/Delivered"-->
<!--                    android:layout_marginLeft="9dp"-->
<!--                    android:layout_margin="5dp"-->
<!--                    android:textColor="@color/colorPrimaryDark"-->
<!--                    android:textStyle="bold"-->
<!--                    />-->

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:id="@+id/tv_status_time_cv_prev_ord"-->
<!--                    android:textColor="@color/grey"-->
<!--                    />-->

<!--            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="6"
                android:weightSum="6">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:id="@+id/img_view_cv_details_activity"
                    android:src="@drawable/ic_pagesicon"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5"
                    android:layout_marginLeft="3dp"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_docs_name_cv_details"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="XYZ Document"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:weightSum="1.25">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="17sp"
                        android:id="@+id/tv_order_no_cv_details"
                        android:text="Order ID:"
                        android:textColor="@color/grey"
                        android:layout_weight="1"
                        />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="17sp"
                            android:id="@+id/tv_order_no_cv_details_val"
                            android:text="Order ID:"
                            android:textColor="@color/grey"
                            android:layout_weight="1"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:id="@+id/iv_pages_details"
                            android:src="@drawable/ic_pagesicon"/>

                        <!--                        <TextView-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:id="@+id/tv_pages_cv_prev_ord"-->
                        <!--                            android:text=" 2 doc - 400 pages"-->
                        <!--                            android:textColor="@color/grey"-->
                        <!--                            android:layout_weight="1"-->
                        <!--                            />-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_docs_cv_details"
                            android:text="2 doc"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/grey"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_pages_cv_details"
                            android:text="400 pages"
                            android:textColor="@color/grey"
                            android:layout_marginLeft="1dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:weightSum="8">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="20dp"
                            android:id="@+id/iv_page_details"
                            android:src="@drawable/ic_pagesicon"
                            android:layout_gravity="left"
                            android:layout_marginTop="3dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:id="@+id/tv_page_size_cv_details"
                            android:text="A4"
                            android:textColor="@color/grey"
                            android:layout_marginLeft="3dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:id="@+id/tv_page_color_cv_details"
                            android:text="Green"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/grey"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:id="@+id/tv_page_type_cv_details"
                            android:text="Coloured"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/grey"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:id="@+id/tv_gsm_val_cv_details"
                            android:text="80"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/grey"
                            />

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:id="@+id/tv_gsm_cv_details"-->
<!--                            android:text="GSM"-->
<!--                            android:textColor="@color/grey"-->
<!--                            android:layout_weight="1"-->
<!--                            />-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:id="@+id/tv_orientation_cv_details"
                            android:text="@string/Portrait"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/grey"
                            android:layout_marginRight="5dp"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="3dp"
                            android:id="@+id/iv_time_details"
                            android:src="@drawable/ic_a4_icon_new"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_time_cv_details"
                            android:text="7:00 AM"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/grey"
                            android:layout_weight="1"
                            android:layout_marginBottom="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="3dp"
                    >

                    <TextView
                        android:id="@+id/tv_details_cv_price"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="100"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <TextView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:id="@+id/tv_details_cv_credits"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                        android:textSize="12sp"
                        android:padding="5dp"
                    android:layout_marginTop="2dp"
                    android:text="Credits"
                    android:layout_weight="0.5"/>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>