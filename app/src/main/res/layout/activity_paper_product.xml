<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaperProduct">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_paper_product"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        android:weightSum="5"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:text="Anand Jai Singh"
            android:textColor="@color/white"
            android:id="@+id/tv_cust_name_paper_prod_activity"
            android:textStyle="bold"
            android:textSize="16dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_weight="3"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:text="Total Pages:-"
            android:textColor="@color/white"
            android:id="@+id/tv_page_paper_prod_activity"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="16dp"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:text="400"
            android:textColor="@color/white"
            android:id="@+id/tv_page_val_paper_prod_activity"
            android:textStyle="bold"
            android:textSize="16dp"
            android:paddingTop="5dp"
            android:gravity="left|center"
            android:paddingRight="5dp"
            android:layout_weight="1"
            />
    </LinearLayout>

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/rv_paper_product_activity"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        >-->
<!--    </androidx.recyclerview.widget.RecyclerView>-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_alignParentTop="true"
        android:id="@+id/viewpager_paper_product"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:id="@+id/btn_accept_paper_prod"
            android:layout_marginLeft="14dp"
            android:text="Accept"
            android:background="@color/green"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="1"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:id="@+id/btn_decline_paper_prod"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:text="Decline"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="@color/red"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="1"
            />


    </LinearLayout>
    </RelativeLayout>
</LinearLayout>