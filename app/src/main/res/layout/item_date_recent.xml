<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="#c0c0c0"
        android:id="@+id/date_recent_card">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/recent_card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="11:00 to 11:30"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_marginStart="16dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/ccp_padding"
                android:layout_marginBottom="@dimen/ccp_padding"></TextView>
            <TextView
                android:id="@+id/recent_card_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="left"
                android:text="Today"
                android:textSize="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/ccp_padding"
                android:layout_marginEnd="16dp"
                android:textColor="#000"></TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>